<div class="top-wrapper">
  <div class="top-container">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%#= form_with model: @user, url: user_registration_path, id: '', class: '', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum, yes!!!!)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <% if user_signed_in? && current_user.category_id == '事務局マスター' %>
        <div class="field">
          <%= f.label :アカウントの種類 %><br />
          <%= f.select :category_id %>
          <%= f.select :category_id, {'事務局': 3, '事務局審査': 2}, { include_blank: '選択してください'}, { class: '' , required: true } %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>